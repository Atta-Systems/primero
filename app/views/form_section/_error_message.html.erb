<% if formObject.errors.any? && formObject.errors.messages[:section_errors].present? %>
    <div class="errorExplanation" id="errorExplanation">
      <h2><%= I18n.t('error_message.notice') %></h2>
      <p><%= I18n.t('error_message.fields_notice') %></p>
      <ul>
        <% formObject.errors.messages[:section_errors].sort_by{ |s| s[:order] }.each do |e| %>
            <%= display_formated_section_error(e) %>
        <% end %>
      </ul>
    </div>
<% end %>