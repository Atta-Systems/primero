<div class="row">
  <div class="large-8 medium-4 columns">    
  </div>
  <div class="large-4 medium-4 columns">
      <% if can? :create, Replication %>
        <%= link_to content_tag(:span, t("replication.configure_a_server"), class: 'create_user'), new_replication_path,  class: 'btn green-button right' %>
      <% end %>
      <%= render 'exports/button', locals: {model: FormSection} %>
      <%# TODO: Hiding imports so that QA doesn't get into trouble %>
      <%#= render 'imports/button' %>
  </div>
</div>
<div class="row">
  <div class="large-12 medium-12 columns">


<div class="page-content-new">
  <div class="side-tab-content full_width">
    <% unless @replications.nil? || @replications.empty? %>
        <%= render :partial => "replications/index", :locals => {:replications => @replications} %>
    <% end %>

    <% unless @devices.nil? || @devices.empty?%>
        <table id="devices" class="list_table">
          <thead>
          <tr>
            <th><%= t("imei") %></th>
            <th><%= t("login.username") %></th>
            <th><%= t("blacklisted") %></th>
          </tr>
          </thead>
          <tbody>
          <% @devices.each do |device| %>
              <tr>
                <td><%= device.imei %></td>
                <td><%= device.user_name %></td>
                <td><input class="device_blacklist_check_box" type="checkbox" id="<%= device.imei %>"
                           <% if device.blacklisted %> checked="checked"
                           <% end %>>
                </td>
              </tr>
          <% end %>
          </tbody>
        </table>
    <% end %>
    <div id="modal-dialog" class="hide"></div>
  </div>
</div>

</div>
</div>