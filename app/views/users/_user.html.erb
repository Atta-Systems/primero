<tr id="user-row-<%= user.user_name %>">
  <td class="full_name"><%= h user.full_name %></td>
  <td class="user-name"><%= h user.user_name %></td>
  <td><%= h user.agency.name %></td>
  <% if can?(:disable, user) %>
      <td class="user-status">
        <%= render :partial => 'user_disabled_checkbox', :locals => {:user => user} %>
      </td>
  <% end %>
  <td>
    <% if can? :show, user %>
        <%= link_to t("users.actions.show"), user %>
        <br>
    <% end %>
    <% if can? :edit, user %>
        <%= link_to t("buttons.edit"), edit_user_path(user) %>
        <br>
    <% end %>
    <% if can? :destroy, user %>
          <% if current_user_name != user.user_name %>
              <%= link_to t("user.actions.delete"), user, data: {confirm: t("user.messages.confirmation")}, method: :delete %>
          <% end %>
    <% end %>
  </td>
</tr>
