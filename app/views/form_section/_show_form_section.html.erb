<% @form_sections.each do |section| %>

  <fieldset id='tab_<%= section.section_name.underscore %>' class='<%= section.section_name %> tab no-border '>
    <div class="clearfix"></div>

      <%= render :partial => "form_section/form_section_info", :locals => {:form_section => section} %>
      <hr>
      <% (section.fields.select{|field| field.visible?}).each do |field| %>
            <%= render :partial => "form_section/field_display_#{field.display_type}",  :locals=>{:field => field, :child=>@child, :display_audio_delete_checkbox => false} %>
      <% end %>
  </fieldset>
<% end %>
