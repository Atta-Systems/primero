<hr />

<div class="login_page">
  <%= form_tag sessions_path, :class => 'default-form' do %>
      <%= error_messages_for :session %>
      <div class="login_panel">
        <h1><%= t("login.details") %></h1>

        <p>
          <%= text_field_tag "user_name", nil, placeholder: t("login.username")  %>
        </p>

        <p>
          <%= password_field_tag "password", nil, placeholder: t("login.password.label")  %>
        </p>

        <div class="btn_panel">
          <%= submit_button t("buttons.login") %>
        </div>
      </div>
      <%= link_to t("login.password.reset"), :controller => "password_recovery_requests", :action => "new" %>
  <% end %>
</div>