<div id="<%= div_id %>" class="field_details" style="display:none;">
  <%= form_for @field, :url => url_for_form_section_field(@form_section.unique_id, @field)  do |fld| %>
    <%= hidden_field_tag "module_id", @module_id, :id => "field_module_id" %>
    <div class="default_lang_panel">
      <div class="lang_title">
        <%= t("forms.initial_language") %> : <%= t("home.#{I18n.default_locale}") %>
      </div>
      <%= render :partial => 'form_section/fields', :locals => {:fld => fld, :fields => fields, :given_locale => I18n.default_locale, :lookup_options => @lookup_options, :is_translation => false} %>
    </div>
    <div class="translation_lang_panel">
      <div class="lang_title <%= 'hide' if @show_add_field.present? %>" >
        <%= t(:provide_translation) %>
        <span class="translation_lang_selected"></span>
      </div>
      <%= render :partial => "form_section/add_translations", :locals => {:fields => fields, :fld => fld, :show_drop_down => @show_add_field.present? }%>
    </div>

    <div class="clearfix"></div>
    <p class="chkbox_visible">
      <%= fld.label :visible, t("visible"), :class => 'key' %>
      <%= fld.check_box :visible?, {}, "true", "false" %>
      <%= fld.hidden_field :type, :class => "field_type"%>
    </p>
    <div class="clearfix"></div>
    <div class="btn_panel">
      <% #TODO - CANCEL button %>
      <%= submit_button t("forms.save_details") %>
    </div>
  <% end %>
</div>
