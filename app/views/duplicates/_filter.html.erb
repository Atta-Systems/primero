    <% end %>
    <% if filters_to_show.include? 'relation_telephone'%>
      <%= build_filter_text(t("duplicates.filter_by.relation_telephone"), 'relation_telephone') %>
    <% end %>
  </form>
  <div class="clearfix"></div>
</div>
