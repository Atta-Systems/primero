<%= display_stat({
  name: :transfer_status,
  stat: :pending,
  stats: stats,
  model: model,
  text: t('dashboard.pending_transfers'),
  filters: [
    "child_status=#{Record::STATUS_OPEN}",
    "transfer_status=#{Transition::TO_USER_LOCAL_STATUS_INPROGRESS}",
    'record_state=true',
    "owned_by=#{current_user.user_name}"
  ]
}) %>

<%= display_stat({
  name: :transfer_status,
  stat: :rejected,
  stats: stats,
  model: model,
  text: t('dashboard.rejected_transfers'),
  filters: [
    "child_status=#{Record::STATUS_OPEN}",
    "transfer_status=#{Transition::TO_USER_LOCAL_STATUS_INPROGRESS}",
    'record_state=true',
    "owned_by=#{current_user.user_name}"
  ]
}) %>

<%= display_stat({
  name: :in_progress_transfers,
  stat: :in_progress,
  stats: stats,
  model: model,
  text: t('dashboard.transers_awaiting_acceptance'),
  filters: [
    "child_status=#{Record::STATUS_OPEN}",
