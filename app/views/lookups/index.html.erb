      <% if can? :create, Replication %>
        <%= link_to content_tag(:span, t("lookup.create"), class: 'create_user'), new_lookup_path,  class: 'btn green-button right' %>
      <% end %>  </li>
  <li>
<% end %>
<div class="clearfix"></div>
<div class="page-content-new row collapse" data-equalizer>
