<div class="row">
  <div class="medium-4 columns">
    <span class="tool-tip-label">
      <%= label_tag numeric_field.tag_name_attribute, t(numeric_field.name, :default => numeric_field.display_name) , :class=>'key'%>
    </span>
  </div>
  <div class="medium-8 columns">
    <% klass = @child.errors[numeric_field.name] == nil ? "" : "field-error"%>
    <span class="<%= klass %>">
      <%= text_field_tag numeric_field.tag_name_attribute, @child[numeric_field.name] %>
    </span>

    <%= image_tag "new/icon_help.png", title: numeric_field.help_text, class: 'tool-tip-icon vtip' if numeric_field.help_text.present? %>
  </div>
</div>