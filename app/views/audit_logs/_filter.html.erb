<div class="panel">
  <div class="button-group align-center">
    <a class="button clear_filters"><%= t('cases.clear_filter') %></a>
    <a id="apply_filter" class="button"><%= t('cases.apply_filter') %></a>
  </div>
  <form id="index_filter_form" autocomplete="off">
    <%= render "filter_timestamp", record: 'audit_logs', date_field_title: 'timestamp', date_field: 'timestamp' %>
    <%= build_filter_multi_select(t("audit_logs.filter_by.user"), 'user_name', @users) %>
    <%= build_filter_checkboxes(t("audit_logs.filter_by.action"), 'action_name', audit_log_action_options) %>
  </form>
  <div class="clearfix"></div>
</div>
