<%
  options = options.is_a?(Array) ? options : report_filter_lookup_options(@lookups, options)
%>

<div class="filter">
  <div class="select_filter">
    <h3><%= I18n.t("report.report_filters.#{name}") %></h3>
    <div class="row collapse">
      <div class="large-12 columns">
        <%= select_tag name, options_for_select(options), class: 'chosen-select', multiple: multiple %>
      </div>
    </div>
  </div>
</div>