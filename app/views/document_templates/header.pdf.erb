<!doctype html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
  </head>
  <body>
    <style>
    .left {
      -webkit-box-flex: 1;
      -webkit-flex: 1;
      width: 60%;
      flex: 1;
      margin-left:20px;
    }
    .right {
      -webkit-box-flex: 1;
      -webkit-flex: 1;
      flex: 1;
    }
    .wrapper{
      display: -webkit-box; /* wkhtmltopdf uses this one */
      display: flex;
       -webkit-box-pack: space-between;
      justify-content: space-between;
    }

    </style>
    <div class="headerContentFirst" style="display:none">
      <div class>
        <%=image_tag(wicked_pdf_asset_base64('logo.png'), height: '80') %>
        <div style="margin-left:5px;font-weight: bold;"><%=case_id%></div>
        <div style="margin-left:5px;"><%=printed_date%></div>
      </div>
    </div>
    <div class="headerContent wrapper">
      <div class="left">
        <%= image_tag(wicked_pdf_asset_base64('logo.png'), height: '65') %>
      </div>
      <div class="right">
        <div style="font-weight: bold;"><%=case_id%></div>
        <div> <%=printed_date%></div>
      </div>
    </div>
    <script type="text/javascript">
        var headerCheck = function() {
          var x=document.location.search.substring(1).split('&');
          for (var i in x) {
            if(x[i] == "page=1"){
              document.getElementsByClassName("headerContentFirst")[0].style.display = "block";
              document.getElementsByClassName("headerContent")[0].style.display = "none";
            }
          }
        }();
    </script>
  </body>
</html>