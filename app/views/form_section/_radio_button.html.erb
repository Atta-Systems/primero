<%
  field_keys ||= []
  name = field_tag_name formObject, radio_button, field_keys
  value ||= field_value formObject, radio_button, field_keys
%>
<div class="row">
  <div class="medium-4 columns">
    <%= label_tag name, t(radio_button.name, :default => radio_button.display_name), {:class=>"key"}%>
  </div>

  <div class="medium-8 columns">
    <% radio_button.options.each do |option| %>
      <%radio_button_id = sanitize_to_id(name)+"_#{option.option_name.dehumanize}"%>
      <%= radio_button_tag name, option.option_name, (value||[]).include?(option.option_name), :id => radio_button_id %>
      <%= label_tag radio_button_id, option.option_name %>
      <br>
    <% end %>
  </div>

  <%= image_tag "new/icon_help.png", title: radio_button.help_text, class: 'tool-tip-icon vtip' if radio_button.help_text.present? %>
</div>
