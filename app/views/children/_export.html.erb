<%= link_to content_tag(:span, t("children.export")), '#', :'data-dropdown' => 'export-dropdown', :'data-options' => 'align:bottom', class: 'btn green-button right' %>
<ul id="export-dropdown" class="f-dropdown" data-dropdown-content>
    <% Exporters::active_exporters_for_model(Child).each do |exporter| %>
      <li>
        <%= link_to t("addons.export_task.#{exporter.id}.one"), child_path(@child, :format => exporter.id, :per_page => :all), :class => "password-prompt" %>
      </li>
    <% end %>
</ul>
