<div class="panel">
  <div class="button-group align-center">
    <a class="button clear_filters"><%= t('cases.clear_filter') %></a>
    <a id="apply_filter" class="button"><%= t('cases.apply_filter') %></a>
  </div>
  <form id="index_filter_form" autocomplete="off">
    <%# TODO - WIP - Remove filter_timestamp and just go with record_shared/filter_date.  Leaving for now for testing. %>
    <%= render "filter_timestamp", record: 'audit_logs', date_field_title: 'timestamp', date_field: 'timestamp' %>
    <%= render "record_shared/filter_date", record: 'audit_logs', date_field_title: 'timestamp', date_field: 'timestamp',
               use_timepicker: true, date_options: [[t('audit_logs.filter_by.timestamp'), 'timestamp']] %>
    <%= build_filter_select(t("audit_logs.filter_by.user"), 'user_name', @users, false) %>
  </form>
  <div class="clearfix"></div>
</div>
