<%
  key, value = change.first
  type = (value['type'].present? ? value['type']['to'] : '')
  to_user_local = (value['to_user_local'].present? ? value['to_user_local']['to'] : '')
  to_user_remote = (value['to_user_remote'].present? ? value['to_user_remote']['to'] : '')
  to_user = (to_user_local.present? ? to_user_local : to_user_remote)
  by_user = (value['transitioned_by'].present? ? value['transitioned_by']['to'] : '')
%>

<% if type == 'referral' %>
  <%= datetime %> <%= t("histories.referral", to_user: to_user, by_user: by_user) %>
<% elsif type == 'transfer' %>
  <%= datetime %> <%= t("histories.transfer", to_user: to_user, by_user: by_user) %>
<% end %>
