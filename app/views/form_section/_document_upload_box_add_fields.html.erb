<%
  upload_document = field.name
  prefix = "#{record_class_name}_#{upload_document}"
  is_current_upload_id =  "#{prefix}_0_is_current"
  description_upload_id = "#{prefix}_0_document_description"
  date_upload_id = "#{prefix}_0_date"
  comments_upload_id = "#{prefix}_0_comments"
  delete_upload_id = "#{prefix}_0_delete_document"
  date_validator = ((field.date_validation == 'not_future_date') ? "primeroDateNotInFuture" : "primeroDate")
  error_msg = ((field.date_validation == 'not_future_date') ? "fields.future_date_not_valid" : "fields.date_not_valid")
  help_text = field.upload_document_help_text || {}
%>
<div class="row">
  <div class="medium-4 columns">
          <span class="tool-tip-label">
            <%= label_tag "#{record_class_name}[#{upload_document}][0][document]", I18n.t("fields.file_upload_box.#{doc_type}.add_document_label"), :class=>'key inline' %>
          </span>
  </div>
  <div class="medium-8 columns file_upload">
    <%= render "form_section/file_input", name: "#{record_class_name}[#{upload_document}][0][document]", id: "#{record_class_name}_#{upload_document}_0_document", help_text: field.help_text || ""%>
    <% if help_text['add'].present? %><p class="help"><%= help_text['add']  %></p><% end %>
  </div>
</div>
<% if doc_type == 'material' %>
  <div class="row">
    <div class="medium-4 columns">
      <label class="key"><%=I18n.t("fields.file_upload_box.#{doc_type}.comment_label")%></label>
    </div>
    <div class="medium-8 columns">
      <%= text_area_tag "#{record_class_name}[#{upload_document}][0][comments]", "", :id => comments_upload_id, :tag => "comments" %>
      <% if help_text['comments'].present? %><p class="help"><%= help_text['comments']  %></p><% end %>
    </div>
  </div>
  <div class="row">
    <div class="medium-4 columns">
      <label class="key"><%= I18n.t("fields.file_upload_box.#{doc_type}.document_date_label")%></label>
    </div>
    <div class="medium-8 columns">
      <%= text_field_tag "#{record_class_name}[#{upload_document}][0][date]", "", :tag => "date", :class => 'form_date_field has_help', :id => date_upload_id, "data-abide-validator" => date_validator %>
      <small class="error"><%= I18n.t(error_msg)%></small>
      <p class="help">
        <% if help_text['date'].present? %>
          <%= help_text['date']  %>
        <% else %>
          <%= t("fields.date_help") %>
        <% end %>
      </p>
    </div>
  </div>
<% else %>
  <div class="row">
    <div class="medium-4 columns">
      <label class="key"><%=I18n.t("fields.file_upload_box.#{doc_type}.current_document_label")%></label>
    </div>
    <div class="medium-8 columns">
      <%= check_box_tag "#{record_class_name}[#{upload_document}][0][is_current]", true, false, :id => is_current_upload_id, :tag => "is_current" %>
      <% if help_text['current'].present? %><p class="help"><%= help_text['current']  %></p><% end %>
    </div>
  </div>
  <div class="row">
    <div class="medium-4 columns">
      <label class="key"><%=I18n.t("fields.file_upload_box.#{doc_type}.document_name_label")%></label>
    </div>
    <div class="medium-8 columns">
      <%= text_field_tag "#{record_class_name}[#{upload_document}][0][document_description]", "", :id => description_upload_id, :tag => "description" %>
      <% if help_text['name'].present? %><p class="help"><%= help_text['name']  %></p><% end %>
    </div>
  </div>
  <div class="row">
    <div class="medium-4 columns">
      <label class="key"><%= I18n.t("fields.file_upload_box.#{doc_type}.document_date_label")%></label>
    </div>
    <div class="medium-8 columns">
      <%= text_field_tag "#{record_class_name}[#{upload_document}][0][date]", "", :tag => "date", :class => 'form_date_field has_help', :id => date_upload_id, "data-abide-validator" => date_validator %>
      <small class="error"><%= I18n.t(error_msg)%></small>
      <p class="help">
        <% if help_text['date'].present? %>
          <%= help_text['date']  %>
        <% else %>
          <%= t("fields.date_help") %>
        <% end %>
      </p>
    </div>
  </div>
  <div class="row">
    <div class="medium-4 columns">
      <label class="key"><%=I18n.t("fields.file_upload_box.#{doc_type}.comment_label")%></label>
    </div>
    <div class="medium-8 columns">
      <%= text_area_tag "#{record_class_name}[#{upload_document}][0][comments]", "", :id => comments_upload_id, :tag => "comments" %>
      <% if help_text['comments'].present? %><p class="help"><%= help_text['comments']  %></p><% end %>
    </div>
  </div>
<% end %>