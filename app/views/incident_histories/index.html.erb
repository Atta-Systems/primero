<div class="row">
  <div class="large-12">
    <h1><%= t("incident.actions.change_log") %></h1>
    <div class="profile-header">
      <ul class="history-details">
        <% @incident.ordered_histories.each do |history| %>
          <% history['changes'].each_pair do |field, change| %>
            <% history_entry = history_entry_for(history, field, change) %>
            <% unless history_entry.empty? %>
              <li>
                <div>
                  <%= render :partial => history_entry[:partial], :locals => history_entry[:locals] %>
                </div>
              </li>
            <% end %>
          <% end %>
        <% end %>
        
      </ul>
    </div>
    
    <div class="profile-tools">
      <ul>
        <li class="back"><%= link_to t("buttons.back"), incident_path(@incident), class: "green-button" %></li>
      </ul>
    </div>
  </div>
</div>