  <%= display_stat_detailed({
    name: :approval_type,
    stat: nil,
    filters: [],
    additional_details: [
      {
        stat: :bia,
        filters: [
          "child_status=#{Record::STATUS_OPEN}",
          "approval_status_bia=#{Child::APPROVAL_STATUS_PENDING}",
          'record_state=true'
        ],
        text: t('dashboard.pending')
