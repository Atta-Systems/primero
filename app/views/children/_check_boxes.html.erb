<div class="row">
  <div class="medium-4 columns">
    <%= label_tag check_boxes.tag_name_attribute, t(check_boxes.name, :default => check_boxes.display_name), {:class=>"key"}%>
  </div>

  <div class="medium-8 columns">
    <% check_boxes.options.each do |option| %>
      <%= check_box_tag check_boxes.tag_name_attribute+"[]", option.option_name, (@child[check_boxes.name]||[]).include?(option.option_name), :id => option.tag_id  %>
      <%= label_tag option.tag_id, option.option_name %>
    <% end %>
  </div>

  <%= image_tag "new/icon_help.png", title: check_boxes.help_text, class: 'tool-tip-icon vtip' if check_boxes.help_text.present? %>
</div>
