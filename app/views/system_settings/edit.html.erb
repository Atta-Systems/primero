<% content_for :breadcrumbs do %>
  <%= I18n.t("system_settings.label") %>
<% end %>

<% content_for :record_sub_nav do %>
  <%= render_controls(@systemSettings, 'system_setting') %>
<% end %>

<div class="page-content-new row collapse" data-equalizer>
  <div class="medium-4 large-4 columns close-side-tab side-tab-container">
    <%= render :partial => 'shared/side_tab', :locals => {:highlight_page => 'system_settings'} %>
  </div>
  <div class="medium-8 large-8 columns side-tab-content-container">
    <div class="side-tab-content" data-equalizer-watch>
      <div class="row">
        <div class="large-12 columns">
          <%= form_tag system_setting_path, :method => "put", :class => 'default-form', :autocomplete => "off", :id => "0" do %>
            <fieldset class="no-border">
            <div class="row">
              <div class="medium-3 columns">
                <%= label_tag "user_locale", t("home.language") %>
              </div>
              <div class="medium-8 columns">
                <%= select_tag :locale, options_for_select(RapidFTR::Application::LOCALES_WITH_DESCRIPTION, I18n.default_locale) %>
              </div>
              <div class="medium-1 columns"> </div>
            </div>
          </fieldset>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
