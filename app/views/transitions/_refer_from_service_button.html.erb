<%
	if formObject.present? && service_object_id.present?

    service_object = formObject.services_section.select {|s| s.unique_id == service_object_id}.first
  else
    service_object = nil
  end
%>
<% if service_object.present? %>
<a data-consent_count_url="cases/consent_count"
	data-service-type="<%= service_object.service_type %>"
	data-service-user-name="<%= service_object.service_implementing_agency_individual %>"
  data-service-object-id="<%= service_object_id %>"
 	data-open=<%= "referral-modal"%> class="button service_referral_button">
 	<%= t("buttons.referral", model: "case") %>
</a>
<% end %>
