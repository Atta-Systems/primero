<div class="panel dash_reporting_location">
  <div class="panel_header">
    <h4><%= t("dashboard.cases_by_social_worker") %></h4>
    <table cellspacing="0" cellpadding="0" class="table-counts table-floating-header">
      <thead>
      <tr>
        <th></th>
        <th><%= t('dashboard.new') %></th>
        <th><%= t('dashboard.total') %></th>
      </tr>
      </thead>
    </table>
  </div>
  <div class="panel_content no-padding panel_main">
    <% if stats.present? %>
      <table cellspacing="0" cellpadding="0" class="table-counts table-floating-header extra">
        <tbody>
          <% stats.each do |k, v| %>
            <tr>
              <td class="id_column"><%= k %></td>
              <td>
                <%= stat_link(v[:new_cases], {filter: index_filters(["new_other", "child_status=#{Record::STATUS_OPEN}", "user=#{k}", 'record_state=true'])}, model) %>
              </td>
              <td>
                <%= stat_link(v[:total_cases], {filter: index_filters(["child_status=#{Record::STATUS_OPEN}", "user=#{k}", 'record_state=true'])}, model) %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <p class="no-content"><%= t('dashboard.no_case_stats') %></p>
    <% end %>
  </div>
</div>

