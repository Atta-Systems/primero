<div class="panel">
  <div class="header_message">
    <div id='interviewer_details'>
      <!-- record state -->
      <% #binding.pry %>
      <p><%= t("child.record_state") %>: <%= child.record_state ? t("record_descriptions.valid") : t("record_descriptions.invalid") %></p>
      <!-- creator -->
      <p><%= t("child.record_state") %>: <%= child['created_by'] %> <%= link_to_update_info(child) %> <%= field_format_date(child.created_at) %></p>
      <!-- last updated -->
      <% if child['last_updated_at']%>
        <p>
          <%= t("child.last_updated") %>: <%= field_format_date(child.last_updated_at) %> 
        </p>
      <% end %>
      <!-- current owner -->
      <p></p>
      <!-- change log -->
      <span id="show_change_log" class="span_button" data-change_log_url="<%=child_record_change_log_path(@child)%>" data-reveal-id="child_<%=@child.short_id%>_change_log" style="cursor: pointer;color: #575757;"><%= t("child.change_log") %></span>
      <div class="reveal-modal medium" id="child_<%=@child.short_id%>_change_log" style="background: none repeat scroll 0 0 #f9faf6;" data-reveal></div>
    </div>
  </div>
</div>

        
