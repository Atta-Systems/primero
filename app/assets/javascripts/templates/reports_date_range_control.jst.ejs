<div class="row collapse">
  <div class="large-12 columns">
    <div class="row collapse">
      <div class="large-6 columns">
        <div class="filters-selected"></div>
      </div>
      <div class="large-6 columns">
        <div class="open btn green-button right" data-action="open">Filters</div>
      </div>
    </div>
  </div>
</div>
<div class="panel container">
  <div class="form-row row">
    <div class="close" data-action="close"><i class="fa fa-close" data-action="close"></i></div>
    <form>
      <h3>Date</h3>
      <div class="row">
        <div class="large-2 columns">
          <label>Filter</label>
          <select id="filter-control" class="filter-control-date" name="filter-control">
            <option value="" disabled selected>Select One</option>
            <option value="day"><%= I18n.t('report.date_ranges.date') %></option>
            <!-- <option value="month"><%= I18n.t('report.date_ranges.month') %></option> -->
            <!-- <option value="week"><%= I18n.t('report.date_ranges.week') %></option> -->
            <option value="year"><%= I18n.t('report.date_ranges.year') %></option>
            <!-- <option value="quarter"><%= I18n.t('report.date_ranges.quarter') %></option> -->
          </select>
        </div>
        <div class="controls"></div>
      </div>
      <div class="row">
        <div class="large-12 columns">
          <a class="btn grey-button clear_filters">Clear</a>
          <a class="btn green-button submit_filters">Filter</a>
        </div>
      </div>
    </form>
  </div>
</div>