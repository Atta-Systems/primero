<div class="row">
  <div class="large-12 columns">
    <div class="clearfix"></div>    

    <table width="100%" class="list_view" cellpadding=0 cellspacing=0>
      <tr><th>Short Id</th></tr>
      <% @incidents.each do |incident| %>
        <tr>
            <td><%= link_to incident.short_id, incident_path(incident), class: 'id_link' %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
