<div class="btn green-button" data-reveal-id="<%= "#{model.name.underscore.downcase}_flag_records" %>">
  <span><%= t("buttons.flag_records") %></span>
</div>

<div class="reveal-modal tiny" id="<%= "#{model.name.underscore.downcase}_flag_records" %>" style="background: none repeat scroll 0 0 #f9faf6;" data-reveal>
  <div class="row flag_records">
    <div class="medium-5 columns">
      <label for="<%=model.name.underscore.downcase%>_flag_message"><%=t("#{model.name.underscore.downcase}.flag_reason")%>:</label>
      <input type="text" class="flag_message" value="" size="30" name="flag_message" id="<%=model.name.underscore.downcase%>_flag_message">
    </div>
    <div class="medium-5 columns">
      <label for="<%=model.name.underscore.downcase%>_flag_date"><%=t("#{model.name.underscore.downcase}.flag_reason_date")%>:</label>
      <input type="text" class="form_date_field flag_date" size="12" name="flag_date" id="<%=model.name.underscore.downcase%>_flag_date">
    </div>
    <div class="medium-2 columns">
      <a class="flag btn green-button" style="margin-top:1.3rem"
        data-request_url="<%= request.url %>"
        data-form_action="<%= send("#{model.name.underscore.downcase}_flag_records_path") %>"
        data-submit_error_message="<%=t("#{model.name.underscore.downcase}.flag_records_error_message")%>"
        data-selected_records_error_message="<%=t("#{model.name.underscore.downcase}.selected_records_error_message")%>"
        ><%= t("buttons.flag_records") %></a>
    </div>
  </div>
</div>