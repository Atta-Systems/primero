<%
  lookups ||= []
  lookup_selection = ((@field.present? && @field.option_strings_source.present?) ? @field.option_strings_source : "")
%>
<div class="row">
  <div class="large-3 medium-3 columns">
    <%= label_tag :option_strings_source_label, t("fields.option_strings_source")%>
  </div>
  <div class="large-9 medium-9 columns">
    <%= select_tag 'field[option_strings_source]', options_for_select(lookups.map{|lkp| [lkp.name, "lookup #{lkp.name.gsub(' ', '_').camelize}"]}.insert(0, ""), lookup_selection )%>
  </div>
</div>
<div class="row">
  <p class="chkbox_multiselect">
    <div class="large-3 medium-3 columns">
      <%= fld.label :multi_select, t("fields.multi_select"), :class => "key" %>
    </div>
    <div class="large-9 medium-9 columns">
      <%= fld.check_box :multi_select?, {}, "true", "false" %>
    </div>
  </p>
</div>
