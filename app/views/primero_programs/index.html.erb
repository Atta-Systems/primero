<% content_for :breadcrumbs do %>
  <%= t("primero_programs.label") %>
<% end %>

<% content_for :record_sub_nav_controls do %>
  <% if can?(:create, PrimeroProgram) %>
    <%= link_to content_tag(:span, t("primero_program.create"), :class => 'create_primero_program'), new_primero_program_path, :class => 'button' %>
  <% end %>
  <%#= render 'exports/button' %>
  <%# TODO: Hiding imports so that QA doesn't get into trouble %>
  <%#= render 'imports/button' %>
<% end %>

<div class="page-content-new row" data-equalizer>
  <div class="large-3 medium-3 columns close-side-tab side-tab-container">
    <%= render :partial => 'shared/side_tab', :locals => {:highlight_page => 'primero_programs'} %>
  </div>
  <div class="large-9 medium-9 columns side-tab-content-container">
    <div class="side-tab-content" data-equalizer-watch>
      <%= render partial: 'shared_configuration_resource/table',
                 locals: {objects: @primero_programs,
                          object_class: PrimeroProgram,
                          heading_keys: ['primero_program.name', 'description'],
                          properties: ['name', 'description']} %>
    </div>
  </div>
</div>
