<div class="panel record_status">
  <div class="header_message">
    <div id="interviewer_details">
      <!-- record state -->
      <p>
        <span><%= t("record_panel.record_state") %>:</span>
        <%= record.record_state ? t("record_panel.valid") : t("record_panel.invalid") %>
      </p>
      <!-- creator -->
      <p>
        <span><%= t("record_panel.created_by") %>:</span>
        <%= record.created_by_full_name %><br>
        <%= field_format_date(record.created_at) %>
      </p>
      <!-- last updated -->
      <p>
        <span><%= t("record_panel.last_update") %>:</span>
        <%= field_format_date(record.last_updated_at) %>
      </p>
      <!-- current owner -->
      <p>
        <span><%= t("record_panel.current_owner") %>:</span>
        <%= record.owner ? record.owner.full_name : 'None' %>
      </p>
      <hr>
      <!-- change log -->
      <a id="show_change_log" data-change_log_url="<%= "/#{model.pluralize}/#{record.id}/change_log" %>"
         data-reveal-id="<%= model %>_<%= record.short_id%>_change_log" href="#">
        <%= t("record_panel.change_log") %>
      </a>
      <div class="reveal-modal medium" id="<%= model %>_<%=record.short_id%>_change_log" data-reveal></div>
    </div>
  </div>
</div>
