<div class="row">
  <div class="large-12 columns">
    <%= render :partial => "incidents/header" %>
    <div class="clearfix"></div>

    <%#
      TODO: For now the filter and order-by have been removed as per PRIMRO-105.
      We will need to put them back in.
    %>
    <div class="filter_bar" style="display: none;">
      <div class="row">
        <div class="large-6 medium-6 columns">
          <%= render :partial => "incidents/filter_box" %>
        </div>
        <div class="large-6 medium-6 columns">
          <%= render :partial => "incidents/order_by_box" %>
        </div>
      </div>
    </div>
    <div class="scope_bar">
      <div class="row">
        <div class="large-6 medium-6 columns">
          <form class="incidents_scope_bar_form">
            <ul class="inline-list">
              <%= render :partial => "incidents/scopes" %>
            </ul>
          </form>
        </div>
      </div>
    </div>

    <table width="100%" class="list_view" cellpadding=0 cellspacing=0>
      <thead>      
        <tr>
          <th class="id_column">
            <%= t("incident.id") %>
          </th>
          <th>
            <%= t("incident.survivor_code") %>
          </th>
           <th>
            <%= t("incident.case_worker_code") %>
          </th>
           <th>
            <%= t("incident.date_of_interview") %>
          </th>
          <th>
            <%= t("incident.date_of_incident") %>
          </th>
        </tr>
      </thead>
      <tbody><%= render :partial => "incidents/summary_row", :collection => @incidents, :as => :incident, :locals => { :checkbox => false, :highlighted_fields => FormSection.sorted_highlighted_fields  }  %></tbody>
    </table>

    <%= render :partial => 'shared/pagination', :locals => { :results => @incidents } %>
  </div>
</div>

