<% content_for :breadcrumbs do %>
  <h2><%= link_to t("cases.label"), cases_path %> &gt; <%= t("cases.register_new_case") %></h2>
<% end %>
<%= form_tag children_path, :multipart => true do %>
    <div class="page-content-new row">
  	<%= hidden_field_tag "child[posted_from]", "Browser" %>
      <div class="large-4 medium-4 columns close-side-tab">
        <div class="side-tab">
          <%= render :partial => "tabs", :object => @form_sections %>
        </div>
      </div>
      <div class="side-tab-content large-8 medium-8 columns">
        <div class="clearfix"></div>
        <%= render :partial => "form_section", :collection => @form_sections %>
        <div class="btn_panel">
            <%= discard_button :back %>
            <%= submit_button %>
        </div>
      </div>
    </div>    
    <div class="clearfix"></div>
<% end %>



