[Unit]
Description=Backburner Primero Queue consumer
After=network.target

[Service]
Type=simple
Restart=always
PrivateTmp=yes
User=<%= node[:primero][:app_user] %>
Group=<%= node[:primero][:app_group] %>
WorkingDirectory=<%= node[:primero][:app_dir] %>
Environment="RAILS_ENV=<%= node[:primero][:rails_env] %>"
Environment="RAILS_LOG_PATH=<%= node[:primero][:log_dir] %>/backburner"
ExecStart=<%= node[:primero][:daemons_dir] %>/backburner-worker.sh

[Install]
WantedBy=multi-user.target
