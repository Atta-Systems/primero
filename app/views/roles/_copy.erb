<div id="<%= "copy-role-modal" %>" class="reveal tiny" data-reveal>
  <%= render 'shared/modal_close' %>
  <div class=<%= "copy_role_form_container row"%> >
    <div class="large-12">
      <% # The copy_role_path below will be swapped out with the actual url by the js. %>
      <%= form_tag(copy_role_path('tmp'), {:multipart => true, :method => 'post', :autocomplete => "off"}) do %>
        <label><%=I18n.t("role.name")%>
          <%= text_field_tag("name") %>
        </label>
        <div class="row align-right">
          <div class="button-group">
            <%= submit_tag(t("buttons.submit"), class: 'button right') %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>