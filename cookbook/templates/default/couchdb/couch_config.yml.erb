---
<% @environments.each do |env| %>
<%= env %>:
  host: <%= @couchdb_host %>
  port: 5984
  https_port: 6984
  prefix: primero
  <%# funky string stuff since ERB doesn't like nested tags %>
  suffix: <%= "<" + "%= ENV['COUCH_SUFFIX'] || '#{env}' %" + ">" %>
  username: <%= @couchdb_username %>
  password: <%= @couchdb_password %>
<% end %>
