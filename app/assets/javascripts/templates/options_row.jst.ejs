<div class="row fields_option_strings_text_row">
  <div class="large-5 medium-5 columns">
    <input type="hidden" name="field[option_strings_text_<%= locale %>][][id]" value="<%= id %>" />
    <input type="text" name="field[option_strings_text_<%= locale %>][][display_text]" id="field_option_strings_text_<%= locale %>__id" value="<%= display_text %>" class: "option_strings_text_input" />
    <span class='help-text'>
      <%= help_text %>
    </span>
  </div>
  <% if (editing) { %>
    <% _.each(locale_options, function(locale_option) { %>
      <% if (locale_option != locale) { %>
        <div class="large-5 medium-5 columns <%= 'translation_forms ' + locale_option %> hide_element">
          <input type="hidden" name="field[option_strings_text_<%= locale_option %>][][id]" value="<%= id %>" />
          <input type="text" name="field[option_strings_text_<%= locale_option %>][][display_text]" id="field_option_strings_text_<%= locale_option %>__id" value="<%= display_text %>" class: "option_strings_text_input" />
          <span class='help-text'>
            <%= I18n.t("form_section.translation") %>
          </span>
        </div>
      <% } %>
    <% }); %>
  <% } %>
  <div class="large-2 medium-2 columns">
      <a class="field_option_remove_button">
        <i class="fa fa-close" />
      </a>
  </div>
</div>
