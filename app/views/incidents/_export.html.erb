<span class="export"> <%= link_to t("incident.export"), "#", class: "green-button" %> </span>
<div class="dropdown hide">
    <% RapidftrAddon::ExportTask.active.each do |export_task| %>
        <% if can?("export_#{export_task.id}".to_sym, Incident) %>
            <%= link_to t("addons.export_task.#{export_task.id}.one"), incident_path(@incident, :format => export_task.id, :per_page => :all), :class => "password-prompt" %>
        <% end %>
    <% end %>
</div>