<div class="panel">
    <div class="header_message">
        <% if tracing_request.reunited? %>
            <div class="reunited-message"><%= reunited_message %></div>
        <% end %>
        <% if tracing_request.flagged? %>
            <p class="flag-message"><%= tracing_request.flag_message_flagged_by %></p>
        <% end %>
        <% if tracing_request.duplicate? %>
            <h3 class="duplicate-message"><%= duplicate_message %></h3>
        <% end %>
        <% if duplicates.present? %>
            <h3 class="duplicate-message"><%= t("tracing_request.another_duplicate_before_link") %>
            <%= link_to 'here', tracing_request_path(duplicates.first) %><%= t("tracing_request.another_duplicate_after_link") %></h3>
        <% end %>

        <div id='interviewer_details'>
            <p><strong><%= t("tracing_request.registered_by") %></strong><br>
             <%= tracing_request['created_by'] %> <%= link_to_tracing_request_update_info(tracing_request) %><br>
             <%= field_format_date(tracing_request.created_at) %></p>
            <% if tracing_request['last_updated_at']%>
                <p><strong><%= t("tracing_request.last_updated") %></strong><br>
                <%= field_format_date(tracing_request.last_updated_at) %> </p>
            <% end %>
            <% if tracing_request['posted_from']=="Mobile" %>
                <p><strong><%= t("tracing_request.posted_from_mobile")  %></strong><br>
                <%= field_format_date(tracing_request.posted_at) %> </p>
            <% end %>
            <%= link_to t("tracing_request.change_log"), tracing_request_record_change_log_path(@tracing_request), :id => 'show_change_log', "data-reveal-id" => "#{@tracing_request.class.name.underscore.downcase}_#{@tracing_request.short_id}_change_log" %>
            <div class="reveal-modal medium" id="<%= "#{@tracing_request.class.name.underscore.downcase}_#{@tracing_request.short_id}_change_log" %>" style="background: none repeat scroll 0 0 #f9faf6;" data-reveal></div>
        </div>
    </div>
</div>